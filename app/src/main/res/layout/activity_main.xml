<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <androidx.gridlayout.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:columnCount="6" app:rowCount="2"
            android:layout_centerInParent="true" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/cymbal1" android:id="@+id/imageView"
                app:layout_column="1" app:layout_row="0" app:layout_gravity="fill_horizontal|fill_vertical"
                android:background="#00000000" android:scaleType="fitCenter" android:onClick="cymbal1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/tom1" android:id="@+id/imageView2"
                app:layout_column="2" app:layout_row="0" app:layout_gravity="fill_horizontal|fill_vertical"
                android:background="#00000000" android:scaleType="fitCenter" android:onClick="tom1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/tom2" android:id="@+id/imageView3"
                app:layout_column="3" app:layout_row="0" app:layout_gravity="fill_horizontal|fill_vertical"
                android:background="#00000000" android:scaleType="fitCenter" android:onClick="tom2"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/cymbal2" android:id="@+id/imageView5"
                app:layout_column="4" app:layout_row="0" app:layout_gravity="fill_horizontal|fill_vertical"
                android:background="#00000000" android:scaleType="fitCenter" android:onClick="cymbal2"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/hihat" android:id="@+id/imageView6"
                app:layout_column="0" app:layout_row="1" app:layout_gravity="fill_horizontal|fill_vertical"
                android:background="#00000000" android:scaleType="fitCenter" android:onClick="hihat"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/snare" android:id="@+id/imageView7"
                app:layout_column="1" app:layout_row="1" app:layout_gravity="fill_horizontal|fill_vertical"
                android:background="#00000000" android:scaleType="fitCenter" android:onClick="snare"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/bass" android:id="@+id/imageView8"
                app:layout_columnSpan="2" app:layout_column="2" app:layout_row="1"
                app:layout_gravity="fill_horizontal|fill_vertical" android:background="#00000000"
                android:scaleType="fitCenter" android:onClick="bass"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/tom3" android:id="@+id/imageView9"
                app:layout_column="4" app:layout_row="1" app:layout_gravity="fill_horizontal|fill_vertical"
                android:background="#00000000" android:scaleType="fitCenter" android:onClick="tom3"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/cymbal3" android:id="@+id/imageView10"
                app:layout_column="5" app:layout_row="1" app:layout_gravity="fill_horizontal|fill_vertical"
                android:background="#00000000" android:scaleType="fitCenter" android:onClick="cymbal3"/>
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>